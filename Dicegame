#include<stdio.h>
#include<stdlib.h>


int main(){
  int a=0;
  int b=0;

  a = (rand()%6)+1;
  b = (rand()%6)+1;

  printf("Rooling the dice ...\n");
  printf("Die 1: %d\n",a);
  printf("Die 2: %d\n",b);
  printf("Total value: %d\n",a+b);

  if((a+b)>7)printf("You, win!\n");
  else printf("You, lose!\n");  
  return 0;
}
